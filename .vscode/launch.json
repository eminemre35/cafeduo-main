{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/server.js",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Frontend",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack Debug",
            "configurations": [
                "Debug Backend",
                "Debug Frontend"
            ]
        }
    ]
}